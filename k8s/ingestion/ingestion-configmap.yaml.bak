apiVersion: v1
kind: ConfigMap
metadata:
  name: ingestion-config
  namespace: coldchain
data:
  KAFKA_BOOTSTRAP_SERVERS: "kafka:9092"
  KAFKA_GROUP_ID: "coldchain-ingestion"
  KAFKA_TOPICS: "coldchain.telemetry.trucks,coldchain.telemetry.rooms,coldchain.alerts"
  MONGO_URI: "MONGO_URI_PLACEHOLDER"
  MONGO_DB: "coldchain"